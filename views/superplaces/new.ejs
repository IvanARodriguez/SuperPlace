<% layout('/layout/boilerplate') %>

<h1 class="display-3 text-center">Create a Super Place</h1>
<h2 class="h5 text-muted text-center">
  Today is just the perfect day to create unforgettable experiences
</h2>
<div class="row gap-2 justify-content-center my-5">
  <form
    action="/superplaces"
    method="post"
    class="col-md-6 row gap-2 align-content-start validated-form"
    novalidate
  >
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="superplace[title]"
        id="title"
        placeholder="Title"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please add a title.
      </div>
    </div>
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="superplace[location]"
        id="Location"
        placeholder="City, Country"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Please add a location, example: Newark, NJ.
      </div>
    </div>
    <div class="input-group mb-3">
      <input
        type="text"
        class="form-control"
        placeholder="Image Link or URL"
        aria-label="Image URL"
        name="superplace[imageUri]"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Image URL is required
      </div>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <input
        name="superplace[price]"
        type="number"
        step="0.01"
        placeholder="0.00"
        class="form-control"
        aria-label="Amount (to the nearest dollar)"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Price is required.
      </div>
    </div>
    <div class="form-group">
      <textarea
        class="form-control"
        id="description"
        rows="5"
        placeholder="Description"
        name="superplace[description]"
        required
      ></textarea>
      <div class="valid-feedback">Looks good!</div>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        Must add a description.
      </div>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Create</button>
    </div>
  </form>
  <div class="col-md-6 p-2 rounded">
    <img
      src="/new-image.webp"
      style="height: 430px; width: 100%; object-fit: cover"
      class="shadow img-fluid img-thumbnail"
      alt="New super place image"
    />
  </div>
</div>


